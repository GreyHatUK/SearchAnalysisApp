             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SearchAnalysisApp.UserControls"
             mc:Ignorable="d" Height="175" MinWidth="400">
    <Grid Margin="0,0,0,0">
        <Label Content="Label" Margin="10,10,91,0" VerticalAlignment="Top" Name="lblTitle"/>
        <Label Content="Label" Margin="10,88,10,10" Name="lblText" HorizontalContentAlignment="Left"  FontSize="12" />
